<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Purchase Order</title>
    <style>
      @page {
        size: Letter;
        margin: 15px 15px 25px 15px;

        /* Ignoring this css because it's weasyprint-specific and vscode gets confused with the syntax highlighting */
        /* css-ignore-start */
        @bottom-left {
          margin: 0 0 25px 25px;
          content: 'Purchase #{{number}} | {{issuedDate}}';
          font-family: Arial, sans-serif;
          font-size: 12px;
        }

        @bottom-right {
          margin: 0 25px 25px 0;
          content: 'Page ' counter(page) ' of ' counter(pages);
          font-family: Arial, sans-serif;
          font-size: 12px;
        }
        /* css-ignore-end */
      }

      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        {{#if isPreview}}
        background-image: url("data:image/svg+xml,%3Csvg width='200' height='200' viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='100%25' height='100%25' fill='none'/%3E%3Ctext x='100' y='100' font-family='sans-serif' font-size='40' fill='rgba(0,0,0,0.2)' font-weight='bold' text-anchor='middle' dominant-baseline='middle' transform='rotate(-27 100 100)'%3EPREVIEW%3C/text%3E%3C/svg%3E");
        {{/if}}
      }
      table {
        height: 100%;
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0px;
      }
      th,
      td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }
      th {
        padding: 4px 8px;
      }

      .container-header {
        font-weight: bold;
        padding: 4px 8px;
        border-bottom: 1px solid;
        background-color: #cccccc;
      }

      .bg-color-header {
        background-color: #cccccc;
      }
      .text-align-right {
        text-align: right;
        padding: 2px 8px;
      }
      .remove-padding-and-border {
        border-right: 0;
        border-left: 0;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: start;
      }
      .footer {
        display: flex;
        justify-content: space-between;
        margin: 0px 20px;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
      }
    </style>
  </head>
  <body>
    <div class="header">
      {{#if logoBlobDataUrl}}
      <img
        src="{{logoBlobDataUrl}}"
        alt="Logo"
        style="max-height: 100px; max-width: 100px"
      />
      {{/if}}
      <div style="text-align: right">
        <h1
          style="
            margin: 0;
            font-weight: 600;
            line-height: 30px;
            margin-bottom: 5px;
          "
        >
          PURCHASE ORDER
        </h1>
        Purchase #{{number}}
        <span style="margin: 0px 5px">|</span>
        {{issuedDate}}
      </div>
    </div>

    <div style="padding: 20px 0px">
      <div style="font-weight: 600">{{accountName}}</div>
      <div style="white-space: pre">{{accountAddress}}</div>
    </div>

    {{!-- First section --}}
    <div
      style="
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: 20px;
        margin-bottom: 20px;
      "
    >
      {{!-- Notes container --}}
      <div style="border: 1px solid">
        <div
          class="bg-color-header"
          style="font-weight: bold; padding: 4px 8px; border-bottom: 1px solid"
        >
          Notes
        </div>
        <!-- Excluding this from prettier because it's messing with the pre-wrap formatting -->
        <!-- prettier-ignore -->
        <div style="white-space: pre-wrap; padding: 4px 8px;">{{notes}}</div>
      </div>

      {{!-- Vendor container --}}
      <div
        style="border: 1px solid; display: grid; grid-template-rows: auto 1fr"
      >
        <div
          class="bg-color-header"
          style="font-weight: 600; padding: 4px 8px; border-bottom: 1px solid"
        >
          Vendor
        </div>
        <div style="padding: 4px 8px; display: grid; gap: 8px">
          <div>
            <span style="font-weight: bold"> {{vendorName}} </span>
            <div>{{vendorPrimaryAddress.line1}}</div>
            <div>{{vendorPrimaryAddress.line2}}</div>
            <div>{{vendorPrimaryAddress.line3}}</div>
          </div>
          <div>
            <span style="font-weight: bold; text-decoration: underline"
              >Customer reference #:</span
            >
            <span>{{vendorReferenceNumber}}</span>
          </div>
        </div>
      </div>
    </div>

    {{!-- Second section --}}
    <div
      style="
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
      "
    >
      {{!-- Billing container --}}
      <div
        style="
          display: grid;
          grid-template-columns: 1fr auto 1fr;
          grid-template-rows: auto 1fr;
          border: 1px solid;
        "
      >
        <div class="container-header" style="grid-column: span 3">Billing</div>
        <div style="padding: 4px 8px">
          <div style="text-decoration: underline; font-style: italic">
            Bill to:
          </div>
          <div style="margin-top: 8px">
            <div style="font-weight: bold">{{accountName}}</div>
            <div>{{billingAddress.line1}}</div>
            <div>{{billingAddress.line2}}</div>
            <div>{{billingAddress.line3}}</div>
          </div>
        </div>
        <div style="border-right: 1px solid"></div>
        <div style="padding: 4px 8px">
          <div
            style="
              display: flex;
              flex-direction: row;
              justify-content: space-between;
              margin-bottom: 8px;
            "
          >
            <div style="font-weight: bold">Currency</div>
            <div>{{currency}}</div>
          </div>
          <div
            style="
              display: flex;
              flex-direction: row;
              justify-content: space-between;
              margin-bottom: 8px;
            "
          >
            <div style="font-weight: bold">Terms</div>
            <div>{{paymentTerms}}</div>
          </div>
          <div
            style="
              display: flex;
              flex-direction: row;
              justify-content: space-between;
            "
          >
            <div style="font-weight: bold">Taxable</div>
            <div>{{taxable}}</div>
          </div>
        </div>
      </div>

      {{!-- Shipping container --}}
      <div
        style="
          display: grid;
          grid-template-columns: 1fr auto 1fr;
          grid-template-rows: auto 1fr;
          border: 1px solid;
        "
      >
        <div class="container-header" style="grid-column: span 3">Shipping</div>
        <div style="padding: 4px 8px">
          <div style="text-decoration: underline; font-style: italic">
            Ship to:
          </div>
          <div style="margin-top: 8px">
            <div>{{shippingAddress.line1}}</div>
            <div>{{shippingAddress.line2}}</div>
            <div>{{shippingAddress.line3}}</div>
          </div>
        </div>
        <div style="border-right: 1px solid"></div>
        <div style="padding: 4px 8px">
          <div
            style="
              display: flex;
              flex-direction: row;
              justify-content: space-between;
              margin-bottom: 8px;
            "
          >
            <div style="font-weight: bold">Method</div>
            <div>{{shippingMethod}}</div>
          </div>
          <div
            style="
              display: flex;
              flex-direction: row;
              justify-content: space-between;
              margin-bottom: 8px;
            "
          >
            <div style="font-weight: bold">Account #</div>
            <div>{{shippingAccountNumber}}</div>
          </div>
          <div
            style="
              display: flex;
              flex-direction: row;
              justify-content: space-between;
              margin-bottom: 8px;
            "
          >
            <div style="font-weight: bold">Incoterms</div>
            <div>{{incoterms}}</div>
          </div>
        </div>
      </div>
    </div>

    {{!-- Third section --}}
    <div style="margin-bottom: 20px">
      <table style="border: 1px solid black; border-collapse: collapse">
        <thead>
          <tr class="bg-color-header">
            <th style="border-right: 0">#</th>
            <th class="remove-padding-and-border">Item</th>
            <th class="remove-padding-and-border" style="text-align: right">
              Unit
            </th>
            <th
              class="text-align-right remove-padding-and-border"
              style="text-align: right"
            >
              Qty
            </th>
            <th
              class="text-align-right remove-padding-and-border"
              style="text-align: right"
            >
              Unit Price
            </th>
            <th style="border-left: 0; text-align: right">Total Price</th>
          </tr>
        </thead>
        <tbody>
          {{#each lines}}
          <tr style="page-break-inside: avoid; border-top: 1px solid black">
            <td
              rowspan="2"
              style="border-right: 0; font-weight: bold; vertical-align: top"
            >
              {{add @index 1}}
            </td>
            <td
              rowspan="2"
              style="
                border-right: 0;
                vertical-align: top;
                border-left: 0;
                min-width: 275px;
              "
            >
              <div style="font-weight: bold">{{itemName}}</div>
              <div
                style="font-weight: normal; color: #575656; margin-top: 13px"
              >
                {{itemDescription}}
              </div>
            </td>
            <td
              style="
                border: 0;
                text-align: right;
                width: 50px;
                vertical-align: top;
              "
            >
              {{unitOfMeasure}}
            </td>
            <td
              style="
                border: 0;
                text-align: right;
                width: 100px;
                vertical-align: top;
              "
            >
              {{quantity}}
            </td>
            <td
              style="
                border: 0;
                text-align: right;
                width: 100px;
                vertical-align: top;
              "
            >
              {{unitCost}}
            </td>
            <td
              style="
                border: 0;
                text-align: right;
                width: 100px;
                vertical-align: top;
              "
            >
              {{totalCost}}
            </td>
          </tr>
          <tr>
            <td colspan="4" style="padding: 0; vertical-align: top; border: 0">
              {{#if additionalFields.length}}
              <table
                id="line-additional-fields"
                style="
                  border: solid black;
                  border-width: 1px 0px 0px 1px;
                  margin: 0;
                "
              >
                {{#each additionalFields}}
                <tr>
                  <td
                    style="
                      border: 0;
                      padding: 5px 8px;
                      font-weight: 600;
                      width: 25%;
                      vertical-align: top;
                    "
                  >
                    {{key}}
                  </td>
                  <td
                    style="
                      border: 0;
                      padding: 5px 8px;
                      text-align: left;
                      vertical-align: top;
                    "
                  >
                    {{value}}
                  </td>
                </tr>
                {{/each}}
              </table>
              {{/if}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <div
        id="cost-aggregation-table"
        style="display: flex; justify-content: end"
      >
        <div style="flex-grow: 1"></div>
        <div>
          <table
            style="
              border: 1px solid black;
              border-top: 0;
              margin: 0;
              break-inside: avoid;
            "
          >
            <tr style="background-color: #cccccc; font-weight: bold">
              <td
                style="
                  width: 150px;
                  border-top: 0;
                  border-bottom: 0;
                  padding: 5px 8px;
                "
              >
                SUBTOTAL
              </td>
              <td
                style="
                  border-top: 0;
                  border-bottom: 0;
                  padding: 5px 8px;
                  width: 100px;
                  text-align: right;
                "
              >
                {{subtotal}}
              </td>
            </tr>
            {{#each costs}}
            <tr>
              <td style="border-top: 0; border-bottom: 0; padding: 5px 8px">
                {{key}}
              </td>
              <td
                style="
                  border-top: 0;
                  border-bottom: 0;
                  padding: 5px 8px;
                  text-align: right;
                "
              >
                {{value}}
              </td>
            </tr>
            {{/each}}
            <tr style="background-color: #c7e1f2">
              <td
                style="
                  font-weight: bold;
                  border: 0;
                  border-left: 1px solid black;
                  padding: 5px 8px;
                "
              >
                TOTAL
              </td>
              <td
                style="
                  font-weight: bold;
                  border: 0;
                  border-left: 1px solid black;
                  padding: 5px 8px;
                  text-align: right;
                "
              >
                {{total}}
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <table style="margin-bottom: 20px; page-break-inside: avoid">
      <thead>
        <tr class="bg-color-header">
          <th>Terms & Conditions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <!-- Excluding this from prettier because it's messing with the pre-wrap formatting -->
          <!-- prettier-ignore -->
          <td
            style="
              vertical-align: top;
              text-align: justify;
              white-space: pre-wrap;
            "
          >{{termsAndConditions}}</td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
